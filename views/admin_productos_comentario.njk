{%extends "admin_base.njk"%}

{%block titulo%}Producto | Comentario
    {%endblock%}

    {%block contenido%}

        <div class="row mt-4">

            <img class="col-3" src="/uploads/{{producto.imagen}}" alt="{{producto.nombre}}"/>
            <div class="col-9">

                <p>
                    <h3>{{producto.nombre}}</h3>
                    <p>
                        <p>
                            {{producto.precio}}
                            â‚¬</p>
                        <p>{{producto.descripcion}}</p>
                    </div>
                </div>

            </div>

        </div>
        <div class="row ml-4 mt-4">
            <h3>Comentarios</h3>
        </div>
        {% for comentario in producto.comentarios %}
            <div class="ml-4 mt-4">

                <p class="mb-3">
                    <h3>{{comentario.nombre}}</h3>
                </p>
                <p>{{comentario.comentario}}</p>
            </div>
                {%endfor%}

                <form action="/admin/comentarios/{{producto.id}}" method="post">
                    <label for="comentario">Comentario</label>
                    <input type="text" name="comentario"/>
                    <button type="submit" class="btn btn-primary">Enviar
                    </button>

                </form>
                {%endblock%}