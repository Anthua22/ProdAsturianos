{% extends "admin_base.njk"%}

{% block titulo%}Admin | Formulario{%endblock%}
    {%block contenido%}
        <div class="mt-4">
            <form action="/admin/{{producto.id}}" method="post" enctype="multipart/form-data">
                {%if producto %}

                    <div class="form-group">
                        <label for="nombre">Nombre</label>
                        <input type="text" class="form-control" name="nombre" value="{{producto.nombre}}" required="required"/>
                    </div>
                    <div class="form-group">
                        <label for="nombre">Descripción</label>
                        <input type="text" class="form-control" name="descripcion" value="{{producto.descripcion}}" required="required"/>
                    </div>
                    <div class="form-group">
                        <label for="precio">Precio</label>
                        <input type="text" class="form-control" name="precio" value="{{producto.precio}}" required="required"/>
                    </div>
                    <div class="form-group">
                        <label for="precio">Imagen</label>
                        <input type="file" class="form-control" name="imagen"/>
                    </div>

                    {%else%}

                    <div class="form-group">
                        <label for="nombre">Nombre</label>
                        <input type="text" class="form-control" name="nombre" value="{{producto.nombre}}" required="required"/>
                    </div>
                    <div class="form-group">
                        <label for="nombre">Descripción</label>
                        <input type="text" class="form-control" name="descripcion" value="{{producto.descripcion}}" required="required"/>
                    </div>
                    <div class="form-group">
                        <label for="precio">Precio</label>
                        <input type="text" class="form-control" name="precio" value="{{producto.precio}}" required="required"/>
                    </div>
                    <div class="form-group">
                        <label for="precio">Imagen</label>
                        <input type="file" class="form-control" name="imagen" required="required"/>
                    </div>
                    {%endif%}

                    <button type="submit" class="btn btn-primary">
                        Enviar
                    </button>
                </form>
            </div>

            {%endblock%}